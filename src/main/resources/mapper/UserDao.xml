<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xdhc.demo.dao.UserDao">
	<insert id="regist" useGeneratedKeys="true" keyProperty="userId"
			keyColumn="user_id" parameterType="com.xdhc.demo.entity.User">
		INSERT INTO
		tb_user(user_name,password,create_time,last_edit_time)
		VALUES
		(#{userName},#{password},#{createTime},#{lastEditTime})
	</insert>
	<select id="login" resultType="com.xdhc.demo.entity.User">
		SELECT user_id, user_name,
		password, create_time, last_edit_time
		FROM tb_user
		WHERE
		user_name=#{userName} and password=#{password}
	</select>
	<select id="getUserByName" resultType="com.xdhc.demo.entity.User">
		SELECT user_id, user_name,
		password, create_time, last_edit_time
		FROM tb_user
		WHERE
		user_name=#{userName}
	</select>
</mapper>
    